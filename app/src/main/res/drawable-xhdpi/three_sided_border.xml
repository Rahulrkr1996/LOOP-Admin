        android:bottom="-2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <solid android:color="#FFF" />
            <stroke
                android:width="1.5dp"
                android:color="@color/black" />
        </shape>
    </item>

