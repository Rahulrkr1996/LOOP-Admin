<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.digitalgreen.www.loopadmin.LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD GADDIDAR"
        android:id="@+id/Login_addGaddidar"
        android:textSize="18dp"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/Login_view_vehicle"
        android:layout_alignRight="@+id/Login_view"
        android:layout_alignEnd="@+id/Login_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD Village"
        android:id="@+id/Login_addVillage"
        android:layout_alignTop="@+id/Login_view_vehicle"
        android:layout_toLeftOf="@+id/Login_view_crop"
        android:layout_toStartOf="@+id/Login_view_crop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:id="@+id/Login_view"
        android:layout_below="@+id/Login_addGaddidar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add aggregator"
        android:id="@+id/Login_addAggregator"
        android:layout_alignBaseline="@+id/Login_view_crop"
        android:layout_alignBottom="@+id/Login_view_crop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Crop"
        android:id="@+id/Login_view_crop"
        android:layout_above="@+id/Login_view_vehicle"
        android:layout_toRightOf="@+id/Login_addAggregator"
        android:layout_toEndOf="@+id/Login_addAggregator"
        android:layout_marginBottom="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Vehicle"
        android:id="@+id/Login_view_vehicle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Login_view_crop"
        android:layout_toEndOf="@+id/Login_view_crop" />
</RelativeLayout>
