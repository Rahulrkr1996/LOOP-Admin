<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/dialog2_titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/dialog2_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_below="@+id/dialog2_titleText"/>

    <ListView
        android:id="@+id/dialog2_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/dialog2_editText"
        android:layout_marginBottom="80dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_cancel"
        android:id="@+id/dialog2_discard" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_tick"
        android:id="@+id/dialog2_save" />

</RelativeLayout>